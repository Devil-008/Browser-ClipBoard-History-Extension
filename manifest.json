{
  "manifest_version": 3,
  "name": "Clipboard History",
  "version": "1.0",
  "description": "Keeps a history of all text you copy in Chrome. Search & pin your snippets.",
  "permissions": [
    "storage",
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "activeTab",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Clipboard History"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_end",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.css", "popup.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
